# Portfolio Manager Environment Variables
# Copy this file to .env and fill in your API keys

# ============================================
# Exchange API Keys (Private - Keep Secret!)
# ============================================

# Upbit API (https://upbit.com/mypage/open_api_management)
UPBIT_ACCESS_KEY=your_upbit_access_key_here
UPBIT_SECRET_KEY=your_upbit_secret_key_here

# Bithumb API (https://www.bithumb.com/api_support/management_api)
BITHUMB_API_KEY=your_bithumb_api_key_here
BITHUMB_SECRET_KEY=your_bithumb_secret_key_here

# ============================================
# Public API Keys (Optional - for higher rate limits)
# ============================================

# CoinGecko Pro API (https://www.coingecko.com/en/api/pricing)
COINGECKO_API_KEY=

# Glassnode API (https://glassnode.com/api)
GLASSNODE_API_KEY=

# CryptoQuant API (https://cryptoquant.com/api)
CRYPTOQUANT_API_KEY=

# Alpha Vantage (https://www.alphavantage.co/support/#api-key)
ALPHA_VANTAGE_API_KEY=

# ============================================
# Server Configuration
# ============================================
PORT=3001
NODE_ENV=development

# ============================================
# React App Configuration
# ============================================
REACT_APP_API_URL=http://localhost:3001/api
